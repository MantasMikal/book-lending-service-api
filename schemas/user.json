{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {

    
    "user": {
      "$id": "#user",
      "title": "User",
      "description": "Data to register a new user.",
      "type": "object",
      "properties": {
        "email": {
          "description": "Unique email address",
          "type": "string",
          "format": "email"
        },
        "username": {
          "description": "Unique username",
          "type": "string",
          "minLength": 3
        },
        "fullName": {
          "description": "Full name",
          "type": "string",
          "minLength": 3
        },
        "password": {
          "description": "Password for registration",
          "type": "string",
          "minLength": 6
        },
        "country": {
          "description": "Country",
          "type": "string",
          "minLength": 2
        },
        "city": {
          "description": "City",
          "type": "string",
          "minLength": 2
        },
        "postcode": {
          "description": "Postcode",
          "type": "string",
          "minLength": 4
        },
        "address": {
          "description": "Address",
          "type": "string",
          "minLength": 5
        }
      },
      "required": ["username", "email", "password", "country", "city", "postcode", "address"],
      "additionalProperties": false
    },

    "userUpdate": {
      "$id": "#userUpdate",
      "title": "User Update",
      "description": "Data a user can update (excludes username).",
      "type": "object",
      "properties": {
        "email": {
          "description": "Unique email address",
          "type": "string",
          "format": "email"
        },
        "username": {
          "description": "Unique username",
          "type": "string",
          "minLength": 3
        },
        "fullName": {
          "description": "Full name",
          "type": "string",
          "minLength": 3
        },
        "password": {
          "description": "Password for registration",
          "type": "string",
          "minLength": 6
        },
        "country": {
          "description": "Country",
          "type": "string",
          "minLength": 2
        },
        "city": {
          "description": "City",
          "type": "string",
          "minLength": 2
        },
        "postcode": {
          "description": "Postcode",
          "type": "string",
          "minLength": 4
        },
        "address": {
          "description": "Address",
          "type": "string",
          "minLength": 5
        }
      },
      "additionalProperties": false
    }
  }
}
